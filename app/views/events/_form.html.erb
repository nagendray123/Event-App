<%= form_with model: event do |form| %>
  <div>
  	<%= form.label :event_name %><br>
  	<%= form.text_field :event_name %>
    <%  event.errors.full_messages_for(:event_name).each do |message| %>
      <div><%= message %></div>
      <% end %>
  </div>

  <div>
  	<%= form.label :event_description %><br>
  	<%= form.text_field :event_description %>
    <%  event.errors.full_messages_for(:event_description).each do |message| %>
      <div><%= message %></div>
      <% end %>
  </div>

  <div>
  	<%= form.label :date %><br>
  	<%= form.text_field :date %>
    <%  event.errors.full_messages_for(:date).each do |message| %>
      <div><%= message %></div>
      <% end %>
  </div>

  <div>
  	<%= form.label :time %><br>
  	<%= form.text_field :time %>
    <%  event.errors.full_messages_for(:time).each do |message| %>
      <div><%= message %></div>
      <% end %>
  </div>

  <div>
  	<%= form.label :location %><br>
  	<%= form.text_field :location %>
    <%  event.errors.full_messages_for(:location).each do |message| %>
      <div><%= message %></div>
      <% end %>
  </div><br>

  <div>
  	<%= form.submit %>
  </div>
<% end %>